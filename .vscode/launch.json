    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run fetch_sbom.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/fetch_sbom.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": [
                "--key-file",
                "key.json",
                "--output-dir",
                "sboms"
            ],
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": true
        },
        {
            "name": "Python: Current File (args)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": [
                "--key-file",
                "key.json",
                "--output-dir",
                "sboms"
            ],
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "justMyCode": true
        }
    ]
}